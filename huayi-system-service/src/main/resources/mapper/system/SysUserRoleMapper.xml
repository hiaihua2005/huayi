<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.huayi.system.mapper.SysUserRoleMapper">

	<resultMap type="SysUserRole" id="SysUserRoleResult">
		<result property="userId"     column="user_id"      />
		<result property="roleId"     column="role_id"      />
		<result property="companyId"     column="company_id"      />
		<result property="createTime"     column="create_time"      />
		<result property="createUser"     column="create_user"      />
	</resultMap>

	<delete id="deleteUserRoleByUserId" parameterType="com.huayi.company.condition.system.SysUserRoleCondition">
		delete from sys_user_role where company_id=#{companyId} and user_id=#{userId}
	</delete>
	
	<select id="countUserRoleByRoleId" parameterType="com.huayi.company.condition.system.SysUserRoleCondition" resultType="Integer">
	    select count(1) from sys_user_role where company_id=#{companyId} and role_id=#{roleId}
	</select>
	
	<delete id="deleteUserRole" parameterType="com.huayi.company.condition.system.SysUserRoleCondition">
 		delete from sys_user_role where company_id=#{companyId} and user_id in
 		<foreach collection="array" item="userId" open="(" separator="," close=")">
 			#{userId}
        </foreach> 
 	</delete>
	
	<insert id="batchUserRole">
		insert into sys_user_role(company_id,user_id, role_id,create_time,create_user) values
		<foreach item="item" index="index" collection="list" separator=",">
			(#{item.companyId},#{item.userId},#{item.roleId},#{item.create_time},#{item.create_user})
		</foreach>
	</insert>
	
</mapper> 