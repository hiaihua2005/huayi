<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.huayi.system.mapper.SysRoleMenuMapper">

	<resultMap type="SysRoleMenu" id="SysRoleMenuResult">
		<result property="companyId"     column="company_id"      />
		<result property="roleId"     column="role_id"      />
		<result property="menuId"     column="menu_id"      />
		<result property="createTime"     column="create_time"      />
		<result property="createUser"     column="create_user"      />
	</resultMap>

	<delete id="deleteRoleMenuByRoleId" parameterType="Long">
		delete from sys_role_menu where role_id=#{roleId}
	</delete>
	
	<select id="selectCountRoleMenuByMenuId" resultType="Integer">
	    select count(1) from sys_role_menu where menu_id=#{menuId}  
	</select>

	<select id="selectRoleMenuList" parameterType="com.huayi.system.condition.system.SysRoleMenuCondition" resultMap="SysRoleMenuResult">
		select r.company_id, r.menu_id, r.role_id
		from sys_role_menu r where r.company_id>0
		<if test="companyId != null and companyId>0  ">
		   and company_id = #{companyId}
		</if>
		and role_id=#{roleId}
	</select>

	
	<delete id="deleteRoleMenuByRoleCondition" parameterType="com.huayi.system.condition.system.SysRoleMenuCondition">
 		delete from sys_role_menu where r.company_id>0
		<if test="companyId != null and companyId>0  ">
			and company_id = #{companyId}
		</if>
 		and role_id = #{roleId}
 	</delete>

	<delete id="batchDeleteRoleMenu" parameterType="com.huayi.system.condition.system.SysRoleMenuCondition">
		delete from sys_role_menu where company_id=#{companyId} and role_id= #{roleId} and menu_id in
		<foreach collection="menuIds" item="menuId" open="(" separator="," close=")">
			#{menuId}
		</foreach>
	</delete>
	
	<insert id="batchRoleMenu">
		insert into sys_role_menu(company_id,role_id, menu_id,create_time,create_user) values
		<foreach item="item" index="index" collection="list" separator=",">
			(#{item.companyId},#{item.roleId},#{item.menuId},#{item.createTime},#{item.createUser})
		</foreach>
	</insert>
	
</mapper> 